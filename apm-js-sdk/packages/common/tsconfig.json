{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["src"],
  "compileOnSave": false
}
